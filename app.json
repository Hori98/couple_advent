{
  "expo": {
    "name": "Couple Advent",
    "slug": "couple-advent",
    "scheme": "coupleadvent",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "写真を選択してコンテンツに使用します",
          "cameraPermission": "カメラを使用して写真を撮影します"
        }
      ],
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.couple-advent",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "画像をアップロードするために写真へのアクセス許可が必要です"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    }
  }
}
